<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTROS"
        android:textSize="28sp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.092" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/fondo2"
                android:padding="16dp"
                android:scaleType="centerCrop">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/good_job" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_toEndOf="@id/image_view"
                    android:layout_toRightOf="@id/image_view"
                    android:text="Actividad Realizada"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_nameC"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/image_view"
                    android:layout_toRightOf="@id/image_view"
                    android:text="Nombre: "
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/info_nameC"
                    android:layout_toRightOf="@+id/info_nameC"
                    android:text="Caminata"
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_stepsC"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/image_view"
                    android:layout_toRightOf="@id/image_view"
                    android:text="Pasos: "
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/info_stepsC"
                    android:layout_toRightOf="@+id/info_stepsC"
                    android:text="60000"
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_percentC"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="39dp"
                    android:layout_toEndOf="@id/image_view"
                    android:layout_toRightOf="@id/image_view"
                    android:text="Porcentaje: "
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="39dp"
                    android:layout_toEndOf="@+id/info_percentC"
                    android:layout_toRightOf="@+id/info_percentC"
                    android:text="100"
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/fondo2"
                android:padding="16dp"
                android:scaleType="centerCrop">

                <ImageView
                    android:id="@+id/image_view2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/did_it2" />

                <TextView
                    android:id="@+id/title_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_toEndOf="@id/image_view2"
                    android:layout_toRightOf="@id/image_view2"
                    android:text="Actividad en Proceso"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_nameC2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text2"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/image_view2"
                    android:layout_toRightOf="@id/image_view2"
                    android:text="Nombre: "
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_name2"
                    android:layout_width="113dp"
                    android:layout_height="49dp"
                    android:layout_below="@id/title_text2"
                    android:layout_marginStart="29dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/info_nameC2"
                    android:layout_toRightOf="@+id/info_nameC2"
                    android:text="Caminata"
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_stepsC2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text2"
                    android:layout_marginStart="37dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="61dp"
                    android:layout_toEndOf="@id/image_view2"
                    android:layout_toRightOf="@id/image_view2"
                    android:text="Pasos: "
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_steps2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text2"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="66dp"
                    android:layout_toEndOf="@+id/info_stepsC2"
                    android:layout_toRightOf="@+id/info_stepsC2"
                    android:text="22678"
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_percentC2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text2"
                    android:layout_marginStart="36dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="98dp"
                    android:layout_toEndOf="@id/image_view2"
                    android:layout_toRightOf="@id/image_view2"
                    android:text="Porcentaje: "
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_percent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text2"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="97dp"
                    android:layout_toEndOf="@+id/info_percentC2"
                    android:layout_toRightOf="@+id/info_percentC2"
                    android:text="23"
                    android:textColor="@color/blue_degraded"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_steps_24px"
        android:textSize="14sp"
        android:background="@color/blue"
        android:text="Actualizar Datos"
        android:textColor="@color/white"
        android:tint="@color/white"
        app:drawableTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.259" />


</androidx.constraintlayout.widget.ConstraintLayout>